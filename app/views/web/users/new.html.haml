- content_for :header do
  = t('.registration')

.row
  .col-md-4.col-md-offset-2
    = simple_form_for @user, url: users_path(params.extract(:from)), html: {class: 'form-horizontal'} do |f|
      = f.input :email
      = f.input :password
      = f.input :first_name
      = f.input :last_name
      = f.input :patronymic, as: :string
      = f.input :birth_date, as: :date_picker
      = f.input :municipality
      = f.input :locality, as: :string
      = f.input :postcode, as: :string
      = f.input :school, as: :string
      = f.input :group, as: :string
      = f.input :home_phone, as: :string
      = f.input :mobile_phone, as: :string
      = f.input :avatar
      /= f.input :accept_agreement, as: :boolean

      = f.button :submit
    %p= t('.or')
    = link_to t('.sign_in'), new_session_path
