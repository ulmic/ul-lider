= javascript_include_tag 'web/admin/participants'
.row
  .col-md-10
    = simple_form_for @participant, url: { controller: 'web/admin/club/participants', action: action }, html: { class: 'form-horizontal' } do |f|
      = f.input :email, as: :string
      = f.input :last_name, as: :string
      = f.input :first_name, as: :string
      = f.input :patronymic, as: :string
      = f.input :birth_date, as: :date_picker
      = f.input :phone, as: :string
      = f.input :past_participation
      = f.button :submit
