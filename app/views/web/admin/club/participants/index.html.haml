= title_is
- model_class = Club::Participant
.participant-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:full_name)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @participants.each do |participant|
      %tr
        %td= link_to participant.id, edit_admin_club_participant_path(participant)
        %td= link_to participant.full_name, edit_admin_club_participant_path(participant)
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_club_participant_path(participant), class: 'btn btn-warning btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_club_participant_path(participant), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_club_participant_path, class: 'btn btn-primary'
