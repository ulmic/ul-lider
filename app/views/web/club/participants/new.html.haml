- title_is
= stylesheet_link_tag 'web/participants'
= javascript_include_tag 'web/filings'
= javascript_include_tag 'web/participants'
- content_for :header do
  %h3
    = t('.title')
.row.form
  .col-md-4.col-md-offset-2
    = simple_form_for @participant, url: { controller: 'web/club/participants', action: :create }, html: { class: 'form-horizontal' } do |f|
      = f.input :email, as: :string
      = f.input :last_name, as: :string
      = f.input :first_name, as: :string
      = f.input :patronymic, as: :string
      = f.input :birth_date, as: :date_picker
      = f.input :phone, as: :string
      = f.input :past_participation
      = f.button :submit, t('.send_request')
