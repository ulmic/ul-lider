= title_is @news.title
= stylesheet_link_tag 'web/news'
- content_for :meta do
  %meta{ property: 'og:description', content: "#{@news.lead} #ЯЛидер" }
  %meta{ property:'og:image', content: @news.photo }
  %meta{ name:'description', content: "#{@news.lead} #ЯЛидер" }
  %link{ rel: 'image_src', href: @news.photo  }
.show
  .title
    = @news.title
  .date
    = @news.publish_date_time
  .social_buttons
    = render 'layouts/web/shared/social_buttons'
  .body
    = image_tag @news.photo, class: 'main_photo'
    != @news.body
    = render 'layouts/web/shared/social_buttons'
