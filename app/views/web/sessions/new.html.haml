- content_for :header do
  = t('.auth')

.row
  .col-md-4.col-md-offset-2
    = simple_form_for @session, url: session_path(params.extract(:from)) do |f|
      = f.input :email
      = f.input :password
      = f.button :submit

      = link_to t('.remind_password'), new_remind_password_path
    %p{ :style => "margin-top:10px;" }= t('.or')
    = link_to t('.register'), new_user_path
