= stylesheet_link_tag 'web/sessions'
- content_for :header do
  = t('.title')

.row
  .col-md-4.col-md-offset-2
    = simple_form_for @session, url: session_path(params.extract(:from)) do |f|
      = f.input :email
      = f.input :password
      = f.button :submit, t('helpers.links.enter')

      = link_to t('.remind_password'), new_remind_password_path, class: 'remind_password'
